@model UI.Models.ProductModel
@{
    ViewBag.Title = "Ekle";
}

<h2>Ürün Düzenleme Sayfası</h2>

<div class="form-body">
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(model => model.ProductId)
        <div class="form-group">
            @Html.LabelFor(model => model.ProductName)<br />
        </div>
        <div class="form-group">
            @Html.EditorFor(model => model.ProductName)<br />
            @Html.ValidationMessageFor(model => model.ProductName)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ProductColor)<br />
        </div>
        <div class="form-group">
            @Html.EditorFor(model => model.ProductColor)<br />
            @Html.ValidationMessageFor(model => model.ProductColor)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ProductWeight)<br />
        </div>
        <div class="form-group">
            @Html.EditorFor(model => model.ProductWeight)<br />
            @Html.ValidationMessageFor(model => model.ProductWeight)
        </div>
        @Html.HiddenFor(model => model.CategoryId)
        
        <br />

        <div class="form-group">
            <input type="submit" value="Kaydet" class="btn btn-success" />
            <input type="reset" value="Reset" class="btn btn-danger" />
        </div>

    }

</div>

@section scripts{
    @Scripts.Render("~/bundles/jqueryval");
}
